            "command": "${workspaceRoot}/fake.sh",
            "windows": {
                "command": "${workspaceRoot}/fake.cmd"
            },
            "args": [ "build", "--", "--debug", "--watch" ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build Debug Version",
            "command": "${workspaceRoot}/fake.sh",
            "windows": {
                "command": "${workspaceRoot}/fake.cmd"
            },
            "args": [ "build", "--", "--debug" ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build Release Version",
            "command": "${workspaceRoot}/fake.sh",
            "windows": {
                "command": "${workspaceRoot}/fake.cmd"
            },
            "args": [ "build" ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
